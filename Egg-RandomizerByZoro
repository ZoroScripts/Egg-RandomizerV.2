local randomBtn = Instance.new("TextButton", main)
randomBtn.Size = UDim2.new(1, -40, 0, 40)
randomBtn.Position = UDim2.new(0, 20, 0, 160)
randomBtn.Text = "üé≤ Randomize Egg"
randomBtn.Font = Enum.Font.GothamSemibold
